{
  "version": 2,
  "builds": [
    {
      "src": "/server/src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "framework": "create-react-app"
      }
    }
  ],
  "rewrites": [
    {
      "source": "server/src/(.*)",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/"
    }
  ]
}
